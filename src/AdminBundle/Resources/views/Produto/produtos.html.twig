{% extends 'AdminBundle:Default:index.html.twig' %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <strong>Produtos</strong>
        </div>
        <div class="panel-body">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Descricao</th>
                    <th>Valor</th>
                    <th>Desconto</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for produto in produtos %}
                    <tr>
                        <td>{{ produto.id }}</td>
                        <td>{{ produto.descricao }}</td>
                        <td>{{ produto.valor }}</td>
                        <td>{{ produto.desconto }}</td>
                        <td>
                            <ul>
                                <a href="{{ path('admin_produto_edit', { 'id': produto.id }) }}"
                                   class="btn btn-default">
                                    <i class="glyphicon glyphicon-edit"></i>
                                </a>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('admin_produto_new') }}" class="btn btn-default">
                <i class="glyphicon glyphicon-edit"></i> Adicionar
            </a>
        </div>
    </div>
{% endblock %}
