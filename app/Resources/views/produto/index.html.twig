{% extends 'base.html.twig' %}

{% block body %}
    <h1>Produto list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Descricao</th>
                <th>Valor</th>
                <th>Desconto</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produto in produtos %}
            <tr>
                <td><a href="{{ path('produto_show', { 'id': produto.id }) }}">{{ produto.id }}</a></td>
                <td>{{ produto.descricao }}</td>
                <td>{{ produto.valor }}</td>
                <td>{{ produto.desconto }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('produto_show', { 'id': produto.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('produto_edit', { 'id': produto.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('produto_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
